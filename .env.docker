# Docker Environment Template
# Copy to .env and fill in your values

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,allarcoapartment.com,www.allarcoapartment.com

# Database (will be provided by Railway)
PGDATABASE=railway
PGUSER=postgres
PGPASSWORD=your_postgres_password
PGHOST=postgres.railway.internal
PGPORT=5432

# Redis (will be provided by Railway)
REDIS_URL=redis://redis.railway.internal:6379/0

# CORS & CSRF
CORS_ALLOWED_ORIGINS=https://allarcoapartment.com,https://www.allarcoapartment.com
CSRF_TRUSTED_ORIGINS=https://allarcoapartment.com,https://www.allarcoapartment.com

# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Zeptomail
ZEPTOMAIL_API_KEY=your_zeptomail_api_key

# Next.js (internal URL)
NEXT_PUBLIC_API_URL=https://allarcoapartment.com/api
